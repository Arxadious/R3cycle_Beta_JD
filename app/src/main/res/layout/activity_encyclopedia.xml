<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/light_green">

    <!-- Lighter Green Bar -->

    <LinearLayout
        android:id="@+id/topLightGreenBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/green"
        android:layout_margin="0dp"
        android:orientation="horizontal" />

    <!-- Main Content Section -->

    <!-- Resources Button -->
    <Button
        android:id="@+id/resourcesBackButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button_left_sqaured_background"
        android:drawableStart="@drawable/book"
        android:text="@string/encyclopedia"
        android:textSize="18sp" />

    <!-- Background -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_green">

        <!-- Logo -->

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/terms_title"
            android:textColor="@color/dark_blue"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/paperButton"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/rounded_button_background"
            android:text="@string/paper"
            app:layout_constraintBottom_toTopOf="@+id/cardboardButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title2" />

        <Button
            android:id="@+id/cardboardButton"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="133dp"
            android:background="@drawable/rounded_button_background"
            android:text="@string/cardboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paperButton" />

        <Button
            android:id="@+id/glassButton"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="133dp"
            android:background="@drawable/rounded_button_background"
            android:text="@string/glass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardboardButton" />

        <Button
            android:id="@+id/plasticslButton"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/rounded_button_background"
            android:text="@string/plastics"
            app:layout_constraintBottom_toTopOf="@+id/metalButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/glassButton" />

        <Button
            android:id="@+id/metalButton"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginStart="133dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_background"
            android:text="@string/metal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lighter Green Bar -->

    <!-- Back Button -->
    <Button
        android:id="@+id/homeBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_right_squared_background"
        android:text="@string/resources"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_next_icon_reversed"/>

    <LinearLayout
        android:id="@+id/bottomLightGreenBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="0dp"
        android:background="@color/green"
        android:orientation="horizontal" />

    <!-- Dark Green Bar (bottom) -->

</LinearLayout>