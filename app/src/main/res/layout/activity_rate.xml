<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">


    <Button
        android:id="@+id/communityback"
        android:layout_width="411dp"
        android:layout_height="76dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/rounded_button_background"
        android:drawableStart="@drawable/left_arrow"
        android:drawablePadding="8dp"
        android:paddingStart="20dp"
        android:text="Community"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="129dp"
        android:layout_height="79dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="140dp"
        android:text="R3cycle"
        android:textColor="@color/light_blue"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top" />

    <LinearLayout
        android:id="@+id/topDarkBar1"
        android:layout_width="413dp"
        android:layout_height="23dp"
        android:layout_marginTop="88dp"
        android:background="@color/dark_green"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/topbar1"
        android:layout_width="413dp"
        android:layout_height="23dp"
        android:layout_marginTop="108dp"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/top"
        android:layout_width="438dp"
        android:layout_height="81dp"
        android:layout_marginBottom="780dp"
        android:background="@drawable/rounded_button_background"
        android:drawableStart="@drawable/ic_community"
        android:drawablePadding="0dp"
        android:paddingStart="80dp"
        android:text="Rate this App"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/topDarkBar"
        android:layout_width="413dp"
        android:layout_height="23dp"
        android:layout_marginBottom="76dp"
        android:background="@color/dark_green"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="413dp"
        android:layout_height="23dp"
        android:layout_marginBottom="96dp"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="250dp"
        android:layout_height="145dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="180dp"
        android:text="Leave a Review:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/rounded_button_background"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>